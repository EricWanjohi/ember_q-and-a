{{#if updateQuestionForm}}
  <div class="question">
    <h4>Update Question</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=question.author id="author"}}
        </div>
        <div class="form-group">
          <label for="question">Question</label>
          {{textarea class="form-control" rows="3" value=question.question id="question"}}
        </div>
        <div class="form-group">
          <label for="notes">Bio</label>
          {{textarea class="form-control" rows="3" value=question.notes id="notes"}}
        </div>
        <div class="form-group">
          <label for="city">Location</label>
          {{input value=question.city id="city"}}
        </div>
        <button {{action 'update' question}}>Save</button>
        <button {{action 'cancel'}}>Cancel</button>
      </form>
    </div>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
