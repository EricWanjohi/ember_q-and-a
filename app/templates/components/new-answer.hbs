{{#if addNewAnswer}}
  <div class="question">
    <h4>New Answer</h4>
    <form>
      <div class="form-group">
        <label for="author">Vampire Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Your Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <button {{action 'saveAnswer'}}>Save</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <div class="answer answer">
    <button {{action 'answerFormShow'}}>New Answer</button>
  </div>
{{/if}}
