{{#if addNewAnswer}}
  <div class="question-form">
    <h4>New Answer</h4>
    <form>
      <div class="form-group">
        <label for="author">Vampire Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Your Answer</label>
        {{textarea class="form-control" rows="3" value=answer id="answer"}}
      </div>
      <button class="btn btn-sm" {{action 'saveAnswer'}}>Save</button>
      <button class="btn btn-sm" {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button class="answer-button" {{action 'answerFormShow'}}>Vampire, Answer the Human</button>
{{/if}}
<hr>
