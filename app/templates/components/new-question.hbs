{{#if addNewQuestion}}
  <div class="question">
    <h4>New Question</h4>
    <hr>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{input value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="notes">Short Bio (include blood type if known)</label>
        {{input value=notes id="notes"}}
      </div>
      <div class="form-group">
        <label for="location">Location</label>
        {{input value=location id="location"}}
      </div>
      <button {{action 'saveQuestion'}}>Save Question</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>Add Question</button>
{{/if}}
