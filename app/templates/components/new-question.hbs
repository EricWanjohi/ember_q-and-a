{{#if addNewQuestion}}
  <div class="question-form">
    <h4>Ask Your Question</h4>
    <hr>
    <form>
      <div class="form-group">
        <label for="author">Your Name</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="question">Question</label>
        {{textarea class="form-control" rows="3" value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="notes">Short Bio (include blood type if known)</label>
        {{textarea class="form-control" rows="3" value=notes id="notes"}}
      </div>
      <div class="form-group">
        <label for="city">Location</label>
        {{input value=city id="city"}}
      </div>
      <button {{action 'saveQuestion'}}>Save Question</button>
      <button {{action 'cancel'}}>Cancel</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>Ask Your Question, Human</button>
{{/if}}
